<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mylockpatternexample" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="haibison.android.lockpattern.LockPatternActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|smallestScreenSize|screenLayout"
            android:screenOrientation="user" />
        <activity
            android:name=".ForgotPatternActivity"
            android:label="@string/title_activity_forgot_pattern" >
        </activity>
        <activity
            android:name=".TestLockPatternActivity"
            android:label="@string/title_activity_test_lock_pattern" >
        </activity>
    </application>

</manifest>
